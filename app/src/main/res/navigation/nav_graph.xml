<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.studycards.MainFragment1"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_main_1">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.studycards.MainFragment2"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_main_2">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/First2Fragment"
        android:name="com.example.studycards.QuestionBankFragment1"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_questionbank_1">

        <action
            android:id="@+id/action_First2Fragment_to_Second2Fragment"
            app:destination="@id/Second2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/Second2Fragment"
        android:name="com.example.studycards.QuestionBankFragment2"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_questionbank_2">

        <action
            android:id="@+id/action_Second2Fragment_to_First2Fragment"
            app:destination="@id/First2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/First3Fragment"
        android:name="com.example.studycards.QuizModeFragment1"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_quizbank_1">

        <action
            android:id="@+id/action_First3Fragment_to_Second3Fragment"
            app:destination="@id/Second3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/Second3Fragment"
        android:name="com.example.studycards.QuizModeFragment2"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_quizbank_2">

        <action
            android:id="@+id/action_Second3Fragment_to_First3Fragment"
            app:destination="@id/First3Fragment" />
    </fragment>
</navigation>